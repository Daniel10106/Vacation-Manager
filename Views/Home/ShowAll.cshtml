@model IEnumerable<VacationManager.Models.PlayerViewModel>

@{
    ViewData["Title"] = "All Employees";
}

<h1>All Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.PlayerId)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Info" asp-route-id="@item.PlayerId">Info</a> | 
                @{if (User.IsInRole("CEO"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a>
                    }
                }
            </td>
        </tr>
        }
    </tbody>
</table>